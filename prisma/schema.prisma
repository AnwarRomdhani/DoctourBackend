generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String
  firstName   String?
  lastName    String?
  phoneNumber String   @unique
  address     String?
  cin         String?  @unique
  role        UserRole
  CNOM        String?  @unique
  coinBalance Float    @default(0)
  

  is2FAEnabled Boolean @default(false)
  twoFASecret String?


  refreshToken String?

  patient Patient?
  doctor  Doctor?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  PATIENT
  DOCTOR
}

model Patient {
  userId Int  @id
  user   User @relation(fields: [userId], references: [id])
}

model Doctor {
  userId Int  @id
  user   User @relation(fields: [userId], references: [id])
}
